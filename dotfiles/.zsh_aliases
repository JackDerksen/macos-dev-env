#
# ~/.zsh_aliases
#

########################################
# Core QoL
########################################
alias cl='clear'

alias l='lx'

alias copy='cp'
alias move='mv'
alias rename='mv'

########################################
# Editors & Tools
########################################
alias vim='nvim'
alias vi='nvim'

alias tls='tmux ls'
alias fetch='fastfetch'

########################################
# Git
########################################
alias gs='git status'
alias gb='git branch'
alias gc='git checkout'
alias ga='git add'

# Rename master â†’ main (local-focused, no remote assumptions)
alias gitgood='git branch -m master main && git fetch --all --prune'

########################################
# Tmux helpers
########################################
tn() {
  local name="$1"
  [[ -z "$name" ]] && { echo "Usage: tn <name>"; return 1; }
  tmux new-session -s "$name"
}

ta() {
  local name="$1"
  [[ -z "$name" ]] && { echo "Usage: ta <name>"; return 1; }
  tmux attach-session -t "$name"
}

tk() {
  local name="$1"
  [[ -z "$name" ]] && { echo "Usage: tk <name>"; return 1; }
  tmux kill-session -t "$name"
}

########################################
# Fuzzy helpers
########################################
# Open file in nvim via fzf + tmux popup
alias ff='nvim "$(fd --type f --hidden --exclude .git | fzf-tmux -p)"'

# Fuzzy cd into a directory
alias dff='cd "$(fd --type directory --hidden --exclude .git | fzf-tmux -p)"'
